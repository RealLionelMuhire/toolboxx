# Copy this file to .env (locally) and fill the values. Do NOT commit real secrets.

# Database
DATABASE_URI=your_mongodb_uri_here

# Payload CMS
PAYLOAD_SECRET=your_payload_secret_here

# Global
NEXT_PUBLIC_APP_URL=https://your-domain.example
NEXT_PUBLIC_ROOT_DOMAIN=your-domain.example
NEXT_PUBLIC_ENABLE_SUBDOMAIN_ROUTING=false

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Cloudflare R2 (replaces Vercel Blob)
S3_BUCKET=your_r2_bucket_name
S3_ACCESS_KEY_ID=your_r2_access_key_id
S3_SECRET_ACCESS_KEY=your_r2_secret_access_key
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_REGION=auto
# From Cloudflare: Bucket > Settings > Public access > R2 dev subdomain
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Web Push
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=mailto:you@example.com

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM_EMAIL=noreply@your-domain.example
SMTP_FROM_NAME=YourApp

# Resend
RESEND_API_KEY=re_xxx

NODE_ENV=production
