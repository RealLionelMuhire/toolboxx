# Copy this file to .env (locally) and fill the values. Do NOT commit real secrets.

# Database
DATABASE_URI=your_mongodb_uri_here

# Payload CMS
PAYLOAD_SECRET=your_payload_secret_here

# Global
NEXT_PUBLIC_APP_URL=https://your-domain.example
NEXT_PUBLIC_ROOT_DOMAIN=your-domain.example
NEXT_PUBLIC_ENABLE_SUBDOMAIN_ROUTING=false

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Vercel Blob
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxx

# Web Push
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=mailto:you@example.com

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM_EMAIL=noreply@your-domain.example
SMTP_FROM_NAME=YourApp

# Resend
RESEND_API_KEY=re_xxx

NODE_ENV=production
